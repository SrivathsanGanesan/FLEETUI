{
  "name": "Screen Recorder Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["tabCapture"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
